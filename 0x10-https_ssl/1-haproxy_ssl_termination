global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend robertnjoroge-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/robertnjoroge.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend robertnjoroge-backend

backend robertnjoroge-backend
	balance roundrobin
	server 124951-web-01 54.88.65.48:80 check
	server 124951-web-02 54.210.52.145:80 check
